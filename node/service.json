{
  "memory": 256,
  "ttl": 10,
  "timeout": 2,
  "minReplicas": 2,
  "maxReplicas": 4,
  "workers": 1,
  "routes": {
    "progressivePromotions": {
      "path": "/_v/progressive-promotions",
      "public": true,
      "policies": [
        {
          "effect": "allow",
          "actions": ["get"]
        }
      ]
    },
    "progressivePromotionsBySku": {
      "path": "/_v/progressive-promotions/:skuId",
      "public": true,
      "policies": [
        {
          "effect": "allow",
          "actions": ["get"]
        }
      ]
    },
    "fixedPricesBySku": {
      "path": "/_v/fixed-prices/:skuId",
      "public": true,
      "policies": [
        {
          "effect": "allow",
          "actions": ["get", "options"]
        }
      ]
    },
    "promotion": {
      "path": "/_v/promotion/:promotion",
      "public": true,
      "policies": [
        {
          "effect": "allow",
          "actions": ["get"]
        }
      ]
    }
  }
}
